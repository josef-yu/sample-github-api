{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "paths": {
      "controllers/*": [
        "./src/controllers/*"
      ],
      "middleware/*": [
        "./src/middleware/*"
      ],
      "models/*": [
        "./src/models/*"
      ],
      "repository/*": [
        "./src/repository/*"
      ],
      "services/*": [
        "./src/services/*"
      ]
    }
  },
  "lib": ["es2015"],
  "include": ["src"],
  "exclude": ["node_modules"]
}
